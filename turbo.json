{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "api#build": {
      "dependsOn": ["^build"],
      "env": ["MONGO_URI", "API_PORT", "NODE_ENV"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": ["API_URL"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": []
    }
  }
}
